{
  "name": "@graphique/monorepo",
  "version": "0.0.1",
  "description": "A container repo for all things Graphique",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "./packages/*",
    "./demo"
  ],
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "babel-loader": "^8.2.2",
    "eslint": "^7.30.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": ">=6",
    "jotai": "^1.1.2",
    "lerna": "^4.0.0",
    "lint-staged": ">=10",
    "microbundle": "^0.13.3",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-docgen-typescript": "^2.0.0",
    "react-dom": "^17.0.2",
    "typescript": "^4.1.3"
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "scripts": {
    "lint": "npm run lint -w ./packages",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -o ./.storybook/site",
    "prepare": "husky install",
    "demo": "npm start -w @graphique/demo",
    "release": "npx lerna changed && npx lerna publish --no-private"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix --max-warnings=0"
  },
  "dependencies": {
    "d3-shape": "^3.0.1"
  }
}
