{
  "name": "@graphique/graphique",
  "version": "0.0.4",
  "description": "The basis for all Graphique visualizations",
  "keywords": [
    "react",
    "d3",
    "data-visualization",
    "chart",
    "grammar-of-graphics",
    "graphique"
  ],
  "files": [
    "/src",
    "/dist"
  ],
  "type": "module",
  "module": "./dist/index.modern.js",
  "source": "./src/index.ts",
  "exports": "./dist/index.modern.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "repository": "https://github.com/graphiquejs/graphique.git",
  "author": "Matt Adams",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint ./ --fix",
    "prepack": "yarn run lint && yarn run build",
    "build": "microbundle build --jsx React.createElement --jsxFragment React.Fragment -f modern --compress -o dist/index.js",
    "watch": "microbundle watch --jsx React.createElement --jsxFragment React.Fragment -f modern"
  },
  "dependencies": {
    "d3-array": "^3.0.1",
    "d3-axis": "^3.0.0",
    "d3-delaunay": "^6.0.2",
    "d3-scale": "^4.0.0",
    "d3-scale-chromatic": "^3.0.0",
    "d3-selection": "^3.0.0",
    "d3-time-format": "^4.0.0",
    "d3-transition": "^3.0.1",
    "jotai": "^1.1.2",
    "react-flatten-children": "^1.1.2"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16"
  },
  "devDependencies": {
    "@types/d3-array": "^3.0.1",
    "@types/d3-axis": "^3.0.1",
    "@types/d3-delaunay": "^6.0.0",
    "@types/d3-scale": "^4.0.1",
    "@types/d3-scale-chromatic": "^3.0.0",
    "@types/d3-time-format": "^4.0.0",
    "@types/d3-transition": "^3.0.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0"
  }
}
